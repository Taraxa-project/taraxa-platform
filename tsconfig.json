{
  "compilerOptions": {
    "incremental": true,
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es6",
    "outDir": "./lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@taraxa_project/taraxa-ui": ["packages/taraxa-ui/src/index.ts"],
      "@taraxa_project/taraxa-community-site": ["services/community-site/src/index.ts"],
      "@taraxa_project/explorer": ["services/explorer/src/index.ts"],
      "@taraxa_project/faucet": ["services/faucet/src/index.ts"],
      "@taraxa_project/explorer-shared": ["packages/explorer-shared/src/index.ts"],
      "@taraxa_project/economics-rewards": ["services/economics-rewards/src/index.ts"],
      "@taraxa_project/delegation-analysis": ["services/delegation-analysis/src/main.ts"]
    }
  },
  "references": [
    {
      "path": "packages/taraxa-ui"
    },
    {
      "path": "packages/explorer-shared"
    },
    {
      "path": "packages/dpos-subgraph"
    },
    {
      "path": "services/community-site"
    },
    {
      "path": "services/explorer"
    },
    {
      "path": "services/delegation-analysis"
    },
    {
      "path": "services/economics-rewards"
    }
  ],
  "exclude": ["node_modules", "lib", "*.d.ts"]
}
