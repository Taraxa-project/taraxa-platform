{
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "ui-build": "SKIP_PREFLIGHT_CHECK=true yarn workspace @taraxa_project/taraxa-ui build",
    "community-build": "SKIP_PREFLIGHT_CHECK=true yarn workspace @taraxa_project/taraxa-community-site build",
    "community-start": "SKIP_PREFLIGHT_CHECK=true yarn workspace @taraxa_project/taraxa-community-site start",
    "status-build": "SKIP_PREFLIGHT_CHECK=true yarn workspace @taraxa_project/taraxa-node-status build",
    "status-start": "SKIP_PREFLIGHT_CHECK=true yarn workspace @taraxa_project/taraxa-node-status dev",
    "format": "prettier . --write && eslint --fix '*.{js,jsx,ts,tsx}'",
    "lint": "tsc --noEmit -p services/community-site && tsc --noEmit -p packages/taraxa-ui",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint", "prettier --write"]
  },
  "dependencies": {
    "husky": "^7.0.2"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1"
  }
}
