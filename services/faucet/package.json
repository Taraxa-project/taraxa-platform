{
  "name": "@taraxa_project/faucet",
  "version": "0.0.1",
  "description": "",
  "author": "Varga El≈ëd <elod.varga@taraxa.io>",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn typeorm:run && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn typeorm:prod:run && node dist/services/faucet/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --runInBand --config ./test/jest-e2e.json",
    "typeorm": "yarn typeorm-ts-node-esm -d data-source.ts",
    "typeorm:run": "yarn typeorm migration:run",
    "typeorm:prod": "yarn typeorm-ts-node-esm -d dist/data-source.js",
    "typeorm:prod:run": "yarn typeorm:prod migration:run",
    "typeorm:drop": "yarn typeorm schema:drop",
    "typeorm:revert": "yarn typeorm migration:revert",
    "typeorm:generate": "yarn typeorm migration:generate",
    "migration:create": "yarn typeorm migration:create -n"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.7",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^8.4.4",
    "@nestjs/config": "^1.2.1",
    "@nestjs/core": "^8.4.4",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/throttler": "^3.0.0",
    "@nestjs/typeorm": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^9.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "content-range": "^2.0.2",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.6.4",
    "helmet": "^6.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.10",
    "@nestjs/testing": "^9.0.11",
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.15.9",
    "@types/ethereumjs-abi": "^0.6.3",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.25",
    "@types/supertest": "^2.0.12",
    "jest": "^29.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "moduleNameMapper": {
    "@faucet/config": "<rootDir>/config",
    "@faucet/common": "<rootDir>/src/modules/common",
    "@faucet/blockchain": "<rootDir>/src/modules/blockchain"
  }
}
