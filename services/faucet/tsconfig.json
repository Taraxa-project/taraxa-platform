{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@faucet/config": ["config"],
      "@faucet/common": ["src/modules/common"],
      "@faucet/blockchain": ["src/modules/blockchain"],
      "@faucet/faucet": ["src/modules/faucet"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "migrations/*",
    "data-source.ts",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "dist"]
}
